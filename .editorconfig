root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[**.{jsx,tsx,js,ts,json,vue,css,html,yml,ts,js,xml,yaml,yml,toml,tf}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
